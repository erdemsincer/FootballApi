@using FootballApi.Application.Dtos
@model IEnumerable<StadiumDto>
@{
    ViewData["Title"] = "Stadyum Yönetimi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1 class="mb-4">-----------------------------</h1>


<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary"><i class="fas fa-building me-2"></i>Stadyum Yönetimi</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Yeni Stadyum Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        </div>
    }

    <table class="table table-hover shadow-lg">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Ad</th>
                <th scope="col">Lokasyon</th>
                <th scope="col">Kapasite</th>
                <th scope="col">Fotoğraf</th>
                <th scope="col" class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stadium in Model)
            {
                <tr>
                    <td>@stadium.Id</td>
                    <td>@stadium.Name</td>
                    <td>@stadium.Location</td>
                    <td>@stadium.Capacity</td>
                    <td>
                        <img src="@stadium.PhotoUrl" alt="Stadium Photo" class="img-thumbnail" style="width: 100px; height: 70px;">
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@stadium.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@stadium.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
