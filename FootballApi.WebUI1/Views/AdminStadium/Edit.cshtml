@model FootballApi.Application.Dtos.StadiumDto
@{
    ViewData["Title"] = "Stadyum Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1 class="mb-4">-----------------------------</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center">
                    <h4><i class="fas fa-edit me-2"></i>Stadyum Düzenle</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">Stadyum Adı</label>
                            <input type="text" name="Name" class="form-control" id="Name" value="@Model.Name" placeholder="Stadyum adı giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Location" class="form-label">Lokasyon</label>
                            <input type="text" name="Location" class="form-control" id="Location" value="@Model.Location" placeholder="Lokasyon bilgisi giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Capacity" class="form-label">Kapasite</label>
                            <input type="number" name="Capacity" class="form-control" id="Capacity" value="@Model.Capacity" placeholder="Kapasiteyi giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="PhotoUrl" class="form-label">Fotoğraf URL</label>
                            <input type="url" name="PhotoUrl" class="form-control" id="PhotoUrl" value="@Model.PhotoUrl" placeholder="Fotoğraf URL'sini giriniz..." />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary me-3">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
