@model FootballApi.Application.Dtos.PlayerDto

@{
    ViewData["Title"] = "Yeni Oyuncu Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1 class="mb-4">-----------------------------</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h4><i class="fas fa-user-plus me-2"></i>Yeni Oyuncu Ekle</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">Ad</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Oyuncunun adını giriniz..." required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="LastName" class="form-label">Soyad</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Oyuncunun soyadını giriniz..." required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Age" class="form-label">Yaş</label>
                            <input type="number" class="form-control" id="Age" name="Age" placeholder="Oyuncunun yaşını giriniz...">
                        </div>

                        <div class="form-group mb-3">
                            <label for="Nationality" class="form-label">Milliyet</label>
                            <input type="text" class="form-control" id="Nationality" name="Nationality" placeholder="Oyuncunun milliyetini giriniz...">
                        </div>

                        <div class="form-group mb-3">
                            <label for="BirthPlace" class="form-label">Doğum Yeri</label>
                            <input type="text" class="form-control" id="BirthPlace" name="BirthPlace" placeholder="Oyuncunun doğum yerini giriniz...">
                        </div>

                        <div class="form-group mb-3">
                            <label for="Photo" class="form-label">Fotoğraf URL</label>
                            <input type="url" class="form-control" id="Photo" name="Photo" placeholder="Oyuncunun fotoğraf URL'sini giriniz...">
                        </div>

                        <div class="form-group mb-3">
                            <label for="TeamId" class="form-label">Takım</label>
                            <select id="TeamId" name="TeamId" class="form-control" required>
                                <option value="">Takım Seçiniz...</option>
                                @if (ViewBag.Teams != null && ViewBag.Teams.Count > 0)
                                {
                                    @foreach (var team in ViewBag.Teams)
                                    {
                                        <option value="@team.Id">@team.Name</option>
                                    }
                                }
                                else
                                {
                                    <option value="">Takım bulunamadı</option>
                                }
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success me-3">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
