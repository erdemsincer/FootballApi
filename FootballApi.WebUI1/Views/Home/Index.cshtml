@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Title"] = "Dashboard";
}
<h1 class="mb-4">-----------------------------</h1>
<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="text-primary"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h1>
            <p class="text-muted">Genel yönetim paneline hoş geldiniz. İşlemlerinizi hızlı bir şekilde gerçekleştirebilirsiniz.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <h5 class="card-title">Toplam Oyuncu</h5>
                    <h3>@ViewBag.TotalPlayers</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <h5 class="card-title">Toplam Takım</h5>
                    <h3>@ViewBag.TotalTeams</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-warning shadow">
                <div class="card-body">
                    <h5 class="card-title">Lig Sayısı</h5>
                    <h3>@ViewBag.TotalLeagues</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <h5>Son Eklenen Oyuncular</h5>
            <ul class="list-group">
                @foreach (var player in ViewBag.RecentPlayers as List<string>)
                {
                    <li class="list-group-item">@player</li>
                }
            </ul>
        </div>
    </div>
</div>
