@model FootballApi.Domain.Entities.PlayerStatistic

@{
    ViewData["Title"] = "İstatistik Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    <!-- Eğer özel bir layout kullanıyorsanız bu kısmı değiştirin -->
}

<div class="container mt-5">
    <h2 class="mb-4">İstatistik Düzenle</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Player.Name" class="form-label">Oyuncu Adı</label>
            <input asp-for="Player.Name" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="MatchesPlayed" class="form-label">Oynanan Maç Sayısı</label>
            <input asp-for="MatchesPlayed" class="form-control" />
            <span asp-validation-for="MatchesPlayed" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Goals" class="form-label">Gol Sayısı</label>
            <input asp-for="Goals" class="form-control" />
            <span asp-validation-for="Goals" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Assists" class="form-label">Asist Sayısı</label>
            <input asp-for="Assists" class="form-control" />
            <span asp-validation-for="Assists" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="KeyPasses" class="form-label">Kilit Paslar</label>
            <input asp-for="KeyPasses" class="form-control" />
            <span asp-validation-for="KeyPasses" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PassAccuracy" class="form-label">Pas Yüzdesi</label>
            <input asp-for="PassAccuracy" class="form-control" />
            <span asp-validation-for="PassAccuracy" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="YellowCards" class="form-label">Sarı Kartlar</label>
            <input asp-for="YellowCards" class="form-control" />
            <span asp-validation-for="YellowCards" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RedCards" class="form-label">Kırmızı Kartlar</label>
            <input asp-for="RedCards" class="form-control" />
            <span asp-validation-for="RedCards" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>

