<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Football</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        header {
            background-color: #007bff;
            color: white;
            padding: 10px 0;
        }

            header .navbar-brand {
                color: #fff;
                font-size: 1.5rem;
            }

                header .navbar-brand:hover {
                    color: #dbe9ff;
                }

        .navbar-nav .nav-link {
            color: #fff;
            font-size: 1rem;
        }

            .navbar-nav .nav-link:hover {
                color: #cce4ff;
            }

        footer {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .content {
            margin-top: 20px;
        }

        .btn-container {
            margin: 20px 0;
            text-align: center;
        }

            .btn-container .btn {
                margin: 5px;
                padding: 10px 20px;
                font-size: 1rem;
                background-color: #0056b3;
                color: white;
                border: none;
                border-radius: 5px;
                transition: background-color 0.3s, color 0.3s;
            }

                .btn-container .btn:hover {
                    background-color: #003d80;
                    color: #e9f5ff;
                }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="/">MyApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container content">
        <div class="btn-container">
            <a href="/User/Football/Index" class="btn">Futbolcu Bilgileri</a>
            <a href="/User/PlayerStatistic/Index" class="btn">Futbolcu İstatistikleri</a>
            <a href="/User/Football/Compare" class="btn">Oyuncu Karşılaştırma</a> <!-- Yeni Eklendi -->
        </div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 MyApp. Tüm Hakları Saklıdır.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
