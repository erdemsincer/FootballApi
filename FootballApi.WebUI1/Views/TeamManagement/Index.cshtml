@model IEnumerable<FootballApi.Domain.Entities.Team>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1 class="mb-4">-----------------------------</h1>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary"><i class="fas fa-users-cog me-2"></i>Takım Yönetimi</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>+ Yeni Oluştur
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        </div>
    }

    <div class="table-responsive shadow-lg">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Takım Adı</th>
                    <th>Ülke</th>
                    <th>Stadyum</th>
                    <th>Teknik Direktör</th>
                    <th>Oyuncu Sayısı</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model)
                {
                    <tr>
                        <td>@team.Id</td>
                        <td>@team.Name</td>
                        <td>@team.Country</td>
                        <td>@team.Stadium</td>
                        <td>@team.Coach</td>
                        <td>@team.Players?.Count() ?? 0</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-warning btn-sm mx-1">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <button class="btn btn-danger btn-sm mx-1 delete-btn" data-id="@team.Id">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".delete-btn");

        deleteButtons.forEach(button => {
            button.addEventListener("click", function () {
                const teamId = this.getAttribute("data-id");

                if (confirm("Bu takımı silmek istediğinize emin misiniz?")) {
                    const form = document.createElement("form");
                    form.method = "post";
                    form.action = `/Team/Delete/${teamId}`;
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        });
    });
</script>

