@model FootballApi.Application.Dtos.TeamDto

@{
    ViewData["Title"] = "Takım Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1 class="mb-4">-----------------------------</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center">
                    <h4><i class="fas fa-edit me-2"></i>Takım Düzenle</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">Takım Adı</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Takım adını giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Country" class="form-label">Ülke</label>
                            <input type="text" class="form-control" id="Country" name="Country" value="@Model.Country" placeholder="Ülke adını giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Stadium" class="form-label">Stadyum</label>
                            <input type="text" class="form-control" id="Stadium" name="Stadium" value="@Model.Stadium" placeholder="Stadyum adını giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Coach" class="form-label">Teknik Direktör</label>
                            <input type="text" class="form-control" id="Coach" name="Coach" value="@Model.Coach" placeholder="Teknik direktör adını giriniz..." required />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-warning me-3">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
