@model FootballApi.Application.Dtos.LeagueDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1 class="mb-4">-----------------------------</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center">
                    <h4><i class="fas fa-edit me-2"></i>Lig Düzenle</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">Lig Adı</label>
                            <input type="text" name="Name" class="form-control" id="Name" value="@Model.Name" placeholder="Lig adı giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Country" class="form-label">Ülke</label>
                            <input type="text" name="Country" class="form-control" id="Country" value="@Model.Country" placeholder="Lig ülkesi giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="NumberOfTeams" class="form-label">Takım Sayısı</label>
                            <input type="number" name="NumberOfTeams" class="form-control" id="NumberOfTeams" value="@Model.NumberOfTeams" placeholder="Takım sayısını giriniz..." required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="LogoUrl" class="form-label">Logo URL</label>
                            <input type="url" name="LogoUrl" class="form-control" id="LogoUrl" value="@Model.LogoUrl" placeholder="Logo URL'sini giriniz..." />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-warning me-3">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

